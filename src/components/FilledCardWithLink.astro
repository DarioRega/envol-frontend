---
import type { FilledCardWithLink } from '../types/cards'

interface Props extends FilledCardWithLink {}

const { href, title, label, description } = Astro.props
---

<div class="rounded-2xl bg-gray-50 p-6">
  <h3 class="text-base font-semibold leading-7 text-gray-900">{title}</h3>
  <dl class="mt-2 space-y-1 text-sm leading-6 text-gray-600">
    <div>
      <dt class="sr-only">{label}</dt>
      <dd><a class="font-semibold text-indigo-600" href={href}>{label}</a></dd>
    </div>
    <div class="mt-1">
      <dt class="sr-only">{description}</dt>

      <dd>{description}</dd>
    </div>
  </dl>
</div>
