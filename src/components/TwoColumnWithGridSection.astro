---
interface Props {
  title: string
  description: string
  gridPosition: 'right' | 'left'
}

const { gridPosition = 'right', title, description } = Astro.props

const classes = [
  gridPosition === 'left' ? 'flex-row' : 'flex-row-reverse',
  'mx-auto',
  'max-w-7xl',
  //"px-6",
  //"lg:px-8",
  'lg:mx-0',
  'lg:max-w-none',
  'flex',
].join(' ')
---

<div class={classes}>
  <div class="grid grid-cols-1 gap-x-8 gap-y-8 lg:grid-cols-12 w-full">
    <div class="lg:col-span-4">
      <h2 class="title-lg">{title}</h2>
      <p class="mt-4 body-lg">{description}</p>
    </div>
    <div class="hidden lg:block col-span-1"></div>
    <div
      class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:col-span-2 lg:gap-8 lg:col-span-7"
    >
      <slot />
    </div>
  </div>
</div>
